# Editor configuration, see http://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true

[*.md]
max_line_length = off
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = false

[*.json]
max_line_length = 120
indent_style = space
indent_size = 2
insert_final_newline = true

[*.py]
max_line_length = 120
indent_style = space
indent_size = 4
insert_final_newline = true

[Makefile]
indent_style = tab
indent_size = 4
insert_final_newline = true

[.{env,gitignore}]
insert_final_newline = true
